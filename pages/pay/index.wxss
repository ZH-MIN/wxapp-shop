/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.address_container .address_btn {
  padding: 20rpx;
}
.address_container .address_btn button {
  width: 60%;
}
.user {
  padding: 20rpx;
}
.user .userInfo {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_title {
  padding: 20rpx;
  color: var(--themeColor);
  font-size: 36rpx;
  background-color: #f5f5f5;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
}
.cart_content .cart_main .cart_item navigator {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item navigator image {
  width: 80%;
}
.cart_content .cart_main .cart_item .goods_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: space-between;
}
.cart_content .cart_main .cart_item .goods_info .goods_name {
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .goods_info .goods_price_wrap {
  display: flex;
}
.cart_content .cart_main .cart_item .goods_info .goods_price_wrap .goods_price {
  flex: 1;
  font-size: 32rpx;
  color: var(--themeColor);
}
.cart_content .cart_main .cart_item .goods_info .goods_price_wrap .goods_num {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.cart_content .cart_main .cart_item .goods_info .goods_price_wrap .goods_num text {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 2rpx solid #ccc;
}
.footer_tool .total_price_wrap {
  flex: 4;
  text-align: right;
  padding: 10rpx;
}
.footer_tool .total_price_wrap .total_price_text .total_price {
  color: var(--themeColor);
}
.footer_tool .total_price_wrap .yun {
  font-size: 26rpx;
  color: #666;
}
.footer_tool .order_pay {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
