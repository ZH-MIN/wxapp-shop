<!--pages/user/index.wxml-->
<!-- 头部 -->
<view class="user_info_wrap">
	<view wx:if="{{userInfo.avatarUrl}}" class="user_img">
		<image class="user_bg" src="{{userInfo.avatarUrl}}"></image>
		<view class="user_info">
			<image class="user_icon" mode="widthFix" src="{{userInfo.avatarUrl}}"></image>
			<view class="user_name">{{userInfo.nickName}}</view>
			<view class="out_Login" bindtap="outLogin">退出登录</view>
		</view>
	</view>
	<!-- 登录授权 -->
	<view wx:else class="login_btn">
		<navigator url="/pages/login/index">登录</navigator>
	</view>
</view>
<!-- 内容 -->
<view class="user_content">
	<view class="user_main">
		<!-- 历史足迹 -->
		<view class="history_wrap">
			<navigator url="/pages/collect/index">
				<view class="his_num">0</view>
				<view class="his_name">收藏的店铺</view>
			</navigator>
			<navigator url="/pages/collect/index">
				<view class="his_num">{{collectNum}}</view>
				<view class="his_name">收藏的商品</view>
			</navigator>
			<navigator url="/pages/collect/index">
				<view class="his_num">0</view>
				<view class="his_name">关注的商品</view>
			</navigator>
			<navigator url="/pages/collect/index">
				<view class="his_num">0</view>
				<view class="his_name">我的足迹</view>
			</navigator>
		</view>
		<!-- 我的订单 -->
		<view class="order_wrap">
			<view class="order_title">我的订单</view>
			<view class="order_content">
				<navigator url="/pages/order/index?type=1">
					<view class="iconfont icon-icon-dindan"></view>
					<view class="order_name">全部订单</view>
				</navigator>
				<navigator url="/pages/order/index?type=2">
					<view class="iconfont icon-fukuantongzhi"></view>
					<view class="order_name">待付款</view>
				</navigator>
				<navigator url="/pages/order/index?type=3">
					<view class="iconfont icon-wuliuche"></view>
					<view class="order_name">待收货</view>
				</navigator>
				<navigator url="/pages/order/index?type=4">
					<view class="iconfont icon-qian"></view>
					<view class="order_name">退款/退货</view>
				</navigator>
			</view>
		</view>
		<!-- 收货地址 -->
		<view class="address_wrap" bindtap="getAddress">
			收货地址管理
		</view>
		<!-- 应用信息 -->
		<view class="app_info">
			<button open-type="contact" class="app_info_item app_info_btn">
				<text>联系客服</text>
				<text>400-618-4000</text>
			</button>
			<view class="app_info_item">意见反馈</view>
			<view class="app_info_item">关于我们</view>
		</view>
		<!-- 推荐 -->
		<view class="recommend">把应用推荐给其他人</view>
	</view>
</view>
