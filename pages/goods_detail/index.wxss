page {
  padding-bottom: 90rpx;
}
.detail_swiper {
  margin-bottom: 10rpx;
}
.detail_swiper swiper {
  height: 70vw;
  text-align: center;
}
.detail_swiper swiper swiper-item image {
  width: 70%;
}
.goods_title {
  border-bottom: 5rpx solid #ccc;
  padding: 10rpx 0;
  display: flex;
}
.goods_title .goods_name {
  flex: 5;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_title .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 5rpx solid #ccc;
}
.goods_title .goods_collect .icon-shoucang1 {
  color: var(--themeColor);
}
.goods_price {
  color: var(--themeColor);
  font-size: 40rpx;
  padding-left: 10rpx;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--themeColor);
  padding: 20rpx;
}
.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #767676;
  font-size: 26rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.btm_tool .btn_buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
